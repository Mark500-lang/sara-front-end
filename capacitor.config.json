{
  "appId": "com.littlestories.app",
  "appName": "Sara Stories",
  "webDir": "build",
  "plugins": {
    "App": {
      "deepLinkingEnabled": true
    }
  },
  "cordova": {
    "preferences": {
      "AutoHideSplashScreen": "true",
      "FadeSplashScreen": "true"
    },
    "plugins": {
      "cordova-plugin-purchase": {}
    }
  },
  "ios": {
    "scheme": "SaraStories",
    "contentInset": "always"
  }
}